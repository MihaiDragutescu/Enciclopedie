
@model Enciclopedie.Models.Category

@{
    ViewBag.Title = "Adaugare categorie";
}

<h2>@ViewBag.Title</h2>
<br />

@using (Html.BeginForm(actionName: "New", controllerName: "Category"))
{
    @Html.Label("Title", "Nume categorie")
    <br />
    @Html.TextBox("CategoryName", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger " })
    <br />
    <br />
    <button class="btn btn-success" type="submit">Adauga categorie</button>
}


