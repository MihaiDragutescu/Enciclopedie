@{
    ViewBag.Title = "Articole:";
}

<h2>@ViewBag.Title</h2>

@foreach (Enciclopedie.Models.Article article in ViewBag.Articles)
{
    <div class="panel panel-default">
        @Html.Partial("ArticleInfo", article)
        <br /> &nbsp

        <div class="panel-footer">
            <a class="btn btn-success" href="/Article/Show/@article.Id">Afisare articol</a>
            <br />
        </div>

    </div>
}

<br />
<a class="btn btn-info" href="/Article/New">Adauga articol</a>
<br />