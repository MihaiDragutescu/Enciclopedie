
@model Enciclopedie.Models.Category

@{
    ViewBag.Title = "Modifica Categoria";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Category"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(m => m.CategoryId)
    <br />
    @Html.Label("Title", "Nume Categorie:")
    <br />
    @Html.EditorFor(m => m.CategoryName)
    <br />
    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger " })
    <br />
    <br />
    <button class="btn btn-success" type="submit">Modifica</button>
}


