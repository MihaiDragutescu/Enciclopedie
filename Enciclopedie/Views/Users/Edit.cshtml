
@model Enciclopedie.Models.UserViewModel

@{
    ViewBag.Title = "Modifica rol utilizator";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Users", routeValues: new { id =
@Model.User.Id}))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(m => m.User.Id)
    <br />
    @Html.LabelFor(m => m.RoleName, "Rol:")
    <br />
    @Html.EditorFor(m => m.RoleName, new { htmlAttributes = new { @class = "form-control" } })
    <br />
    <br />

    <button class="btn btn-success" type="submit">Salveaza modificarile</button>
}

