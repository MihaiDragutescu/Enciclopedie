@{
    ViewBag.Title = "Galerie:";
}

<h2>@ViewBag.Title</h2>
<br />
<div class="container">
    <div class="row my-row">
        @foreach (Enciclopedie.Models.Image image in ViewBag.Images)
        {
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="margin-bottom:25px; display:flex;">
                <div class="thumbnail my-thumbnail">
                    <div>
                        <img class="img-responsive" src="@Url.Content(image.ImagePath)" style="max-height:300px; min-height:300px; min-width:370px" />
                    </div>

                    @if (ViewBag.afisareButoane == true || ViewBag.esteAdmin)
                    {
                        <div class="caption my-caption">
                            <div class="action-btn">
                                <a class="btn btn-success my-buton" href="/Image/Show/@image.Id">Afiseaza imaginea</a>
                            </div>
                            <div class="action-btn">
                                <a class="btn btn-success my-buton" href="/Article/Show/@image.Id">Deschide articolul</a>
                            </div>

                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

<br />
&nbsp &nbsp<a class="btn btn-info" href="/Image/New">Adauga imagine</a>
